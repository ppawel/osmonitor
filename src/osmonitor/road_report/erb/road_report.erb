<center>
<table class="wikitable" border="1" cellspacing="0" cellpadding="2" width="80%">
<tr style="background-color:#E9E9E9">
<th scope="col" width="2%">Ref
</th>
<th scope="col" width="35%">Relation
</th>
<th scope="col" width="43%">Bot report
</th>
</tr>

<% report.statuses.each do |status| %>
<%
  color = nil
  color = 'PaleGreen' if status.green?
  color = 'PaleGoldenrod' if status.get_issues(:WARNING).size > 0
  color = 'LightSalmon' if status.get_issues(:ERROR).size > 0
%>
<% if color %>
<tr style="background-color:<%= color %>">
<% else %>
<tr>
<% end %>
<td style="text-align: center">
{{<%= country %>-<%= status.road.ref_prefix %>|<%= status.road.ref_number %>}}
</td>
<td><div style="color: #666666; font-size: smaller;">
<% if status.road.relation %><b>Relation:</b> {{relation|<%= status.road.relation.id %>}}<br><% end %>
<b>Ways:</b> all (<%= status.road.num_all_ways %>), with ref tag (<%= status.road.num_ref_ways %>), in relation (<%= status.road.num_relation_ways %>)<% if !status.percent_with_lanes.nan? and !status.percent_with_maxspeed.nan? %>, with <i>lanes</i> (<%= status.percent_with_lanes.to_i %>%), with <i>maxspeed</i> (<%= status.percent_with_maxspeed.to_i %>%)<% end %><% if status.road.relation and status.road.relation.tags['note'] %><br><b>Note:</b> <%= status.road.relation.tags['note'] %><% end %>
</div>
</td>
<td>
<ul>
<% status.issues.each do |issue| %>
<%= render_erb("issue_#{issue.name}.erb", country, report, status, issue) %>
<% end %>
</ul>
</td>
</tr>
<% end %>
</table>
</center>
