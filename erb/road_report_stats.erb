<% percent_green, percent_yellow, percent_red = report.get_percentages %>
{| width="66%"
|-
| width="<%= percent_green %>%" bgcolor="PaleGreen" align="center" | <b><%= percent_green %></b>%
| width="<%= percent_yellow %>%" bgcolor="PaleGoldenrod" align="center" | <b><%= percent_yellow %></b>%
| width="<%= percent_red %>%" bgcolor="LightSalmon" align="center" | <b><%= percent_red %></b>%
|}
<% total_input_length, green_length, green_length_percent = report.get_length_stats %>
{| width="66%"
|-
| width="<%= green_length_percent.to_i %>%" bgcolor="PaleGreen" align="center" | <b><%= green_length.to_i %> km</b> (<%= green_length_percent.to_i %>%)
| width="<%= 100 - green_length_percent.to_i %>%" bgcolor="#eeeeee" align="center" | total length = <b><%= total_input_length.to_i %> km</b>
|}
